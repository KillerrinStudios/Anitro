<Page
	x:Class="Anitro.About"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Anitro"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!--<Rectangle Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="1" Fill="{StaticResource BackgroundBrush}"/>-->

		<!--TitlePanel contains the name of the application and page title-->
		<StackPanel Grid.Row="0" Margin="12,17,0,28">
			<!--<TextBlock Text="Anitro" Style="{StaticResource PhoneTextNormalStyle}"/>-->
			<TextBlock Text="about" FontSize="58" Margin="9,-7,0,0" Style="{StaticResource HeaderTextBlockStyle}"/>
		</StackPanel>

		<!--ContentPanel - place additional content here-->
		<Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
			<ScrollViewer x:Name="aboutScrollViewer" Margin="0,0,0,0" VerticalAlignment="Stretch">
				<StackPanel>
					<TextBlock x:Name="Name" Width="Auto" Height="Auto" FontSize="24" VerticalAlignment="Top" TextWrapping="Wrap">
					Anitro
					</TextBlock>
					<TextBlock x:Name="Version" Width="Auto" Height="Auto" FontSize="24" VerticalAlignment="Top" TextWrapping="Wrap" Margin="20,0,0,0">
					1.0.0.0
					</TextBlock>
					<TextBlock x:Name="Description" Margin="0,10,0,0" Width="Auto" FontSize="20" TextWrapping="Wrap"> 
					Developed by Andrew Godfroy of Killerrin Studios. Hummingbird is owned and developed by the crew of hummingbird.me
					</TextBlock>



					<TextBlock Margin="0,20,0,0" Width="Auto" FontSize="20" TextWrapping="Wrap">
					Contact:
					</TextBlock>
					<HyperlinkButton x:Name="KillerrinTwitter" FontSize="22" Grid.Column="1" Grid.Row="3" Content="Twitter"
					HorizontalAlignment="Left"
					HorizontalContentAlignment="Left"
					VerticalAlignment="Top"
					NavigateUri="http://www.twitter.com/killerrin" Margin="0,0,0,0"/>

					<HyperlinkButton x:ConnectionId='1' x:Name="EmailFeedback" FontSize="22" Grid.Column="1" Grid.Row="3" Content="Feedback"
					HorizontalAlignment="Left"
					HorizontalContentAlignment="Left"
					VerticalAlignment="Top"
					                             Margin="0,0,0,0"/>

					<HyperlinkButton x:ConnectionId='2' x:Name="SupportEmail" FontSize="22" Grid.Column="1" Grid.Row="3" Content="Support"
					HorizontalAlignment="Left"
					HorizontalContentAlignment="Left"
					VerticalAlignment="Top"
					                            Margin="0,0,0,0"/>



					<TextBlock Margin="0,20,0,0" Width="Auto" FontSize="20" TextWrapping="Wrap"> 
					Links
					</TextBlock>

					<HyperlinkButton x:Name="KillerrinWebsite" FontSize="22" Grid.Column="1" Grid.Row="3" Content="http://www.killerrin.com"
					HorizontalAlignment="Left"
					HorizontalContentAlignment="Left"
					VerticalAlignment="Top"
					NavigateUri="http://www.killerrin.com" Margin="0,0,0,0"/>

					<HyperlinkButton x:Name="OtherWebsite" FontSize="22" Grid.Column="1" Grid.Row="3" Content="http://www.hummingbird.me"
					HorizontalAlignment="Left"
					HorizontalContentAlignment="Left"
					VerticalAlignment="Top"
					NavigateUri="http://www.hummingbird.me" Margin="0,0,0,0"/>



					<TextBlock Margin="0,20,0,0" Width="Auto" FontSize="20" HorizontalAlignment="Center" TextWrapping="Wrap"> 
					Thank You!
					</TextBlock>
				</StackPanel>
			</ScrollViewer>
		</Grid>
	</Grid>
</Page>

