<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Anitro.Themes"
    xmlns:Converters="using:Anitro.Converters">

    <Converters:RelativeDateTimeConverter x:Key="RelativeDateTimeConverter" />
    
    <DataTemplate x:Key="ActivityFeed_CommentTemplate">
        <StackPanel Orientation="Horizontal" Margin="0,-25,0,-5" VerticalAlignment="Top">
            <Image Width="62.5" Height="125" Margin="0,20,0,0" VerticalAlignment="Top">
                <Image.Source>
                    <BitmapImage UriSource="{Binding storyImage}" />
                </Image.Source>
            </Image>

            <StackPanel Orientation="Vertical" Margin="10,15,0,0" VerticalAlignment="Top">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,0" Orientation="Vertical">
                        <TextBlock Text="{Binding header}" FontSize="18" Foreground="{StaticResource TitleBrush}" TextAlignment="Left" Margin="0,0,0,0" Width="600"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,-5,0,0" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding timeStamp, Converter={StaticResource ResourceKey=RelativeDateTimeConverter}}" Foreground="{StaticResource ContentBrush}"
                                   Margin="0,0,0,0" Width="300" HorizontalAlignment="Left"
                                   FontSize="8" TextAlignment="Left"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="-360,5,0,5" Height="Auto" Orientation="Vertical" VerticalAlignment="Top">
                        <TextBlock x:Name="statusFeedContent" Text="{Binding content}" 
                                   FontSize="14" TextTrimming="WordEllipsis" TextAlignment="Left" TextWrapping="Wrap" LineHeight="20" LineStackingStrategy="BlockLineHeight"
                                   Foreground="{StaticResource ContentBrush}"
                                   Width="235" Height="Auto"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <Style x:Key="ActivityFeed_ItemContainerStyle" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontSize" Value="26" />
        <Setter Property="IsHoldingEnabled" Value="True"/>
    </Style>

</ResourceDictionary>

