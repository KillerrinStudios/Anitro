<Page x:ConnectionId='1'
    x:Class="Anitro.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Anitro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                                >


    <Grid>
        <ProgressRing x:Name="ApplicationProgressBar" Margin="0,20,20,0" HorizontalAlignment="Right" VerticalAlignment="Top" IsActive="False"/>
        
        <Pivot>
            <PivotItem Header="settings" Margin="10,0,0,-0.5">
                <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="1" Margin="0,40,0,0" Orientation="Vertical">
                        <TextBlock x:Name="logoutText" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="NoWrap" Text="you are currently signed into" VerticalAlignment="Top" Width="Auto" FontSize="22" Height="Auto"/>
                        <TextBlock x:Name="logoutUsernameText" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" FontSize="22" Width="Auto" Height="Auto"/>

                        <Button x:ConnectionId='4' x:Name="logoutButton" Content="logout" HorizontalAlignment="Center" Margin="0,0,4,0" VerticalAlignment="Top" Width="294"                           />
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,0" Orientation="Vertical">
                        <TextBlock x:Name="Lockscreen" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="NoWrap" Text="Lockscreen" VerticalAlignment="Top" Width="Auto" FontSize="22" Height="Auto"/>
                        <TextBlock x:Name="LockscreenExplanation" HorizontalAlignment="Center" Margin="10,0,10,0" TextWrapping="Wrap" Text="Due to API changes from the Universal Application Model, Lockscreen Support has been moved into a seperate application" VerticalAlignment="Top" Width="Auto" FontSize="18" Height="Auto"/>

                        <Button x:ConnectionId='3' x:Name="OpenAnitroCompanion" Content="open Anitro Companion" HorizontalAlignment="Center" Margin="0,0,4,0" VerticalAlignment="Top" Width="294"                                        />
                    </StackPanel>
                </Grid>
            </PivotItem>
            
            <PivotItem Header="unlock" Margin="10,0,0,-0.5">
                <Grid>
                    <ScrollViewer VerticalAlignment="Stretch">
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Name="purchaseThankYouMessage" Visibility="Collapsed" Margin="0,0,0,20" FontSize="22" TextWrapping="Wrap" TextAlignment="Center"
                                   Text="Thank you for purchasing the full version of Anitro!" />

                            <StackPanel x:Name="productInformation_StackPanel" Orientation="Vertical" Margin="0,0,0,0">
                                <TextBlock FontSize="14" TextWrapping="Wrap">
                                <Run>Do you like Anitro and want to help support its development? Why not consider purchasing the Anitro Unlock?</Run>
                                <LineBreak />
                                <LineBreak />
                                <Run>Between school and work, I am only able to improve Anitro on my spare time. </Run>
                                <Run>By purchasing the Anitro Unlock, you will be allowing me to purchase caffine which will go to supporting the late night coding sessions involved with improving Anitro!</Run>
                                <LineBreak />
                                <LineBreak />
                                <Run>The full app features:</Run>
                                <LineBreak />
                                <Run>· Removed Ads</Run>
                                <LineBreak />
                                <Run>· Future Premium Items</Run>
                                <LineBreak />
                                <Run>· Many Thanks :)</Run>
                                </TextBlock>

                                <Button x:ConnectionId='2' x:Name="unlockAnitro_Button" Margin="0,10,0,0" Background="{StaticResource AnitroBlue}"                                     >
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                        <StackPanel Orientation="Vertical" Width="240" HorizontalAlignment="Left">
                                            <TextBlock Text="Unlock Anitro" FontSize="18"/>
                                            <TextBlock Text="Unlocks all app functionality" FontSize="14" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                                            <TextBlock Text="$0.99" FontSize="18" />
                                            <TextBlock x:Name="purchasedText" Text="Purchased" Visibility="Collapsed" FontSize="14"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

