<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Anitro.Themes">

    <DataTemplate x:Key="SearchTemplate" x:Name="searchTemplatePortrait">
        <StackPanel Orientation="Horizontal" Margin="0,-25,0,-20" VerticalAlignment="Top">

            <Image Width="74.25" Height="151.25">
                <Image.Source>
                    <BitmapImage UriSource="{Binding CoverImageUrlString}" CreateOptions="None" />
                </Image.Source>
            </Image>

            <StackPanel Orientation="Vertical" Margin="10,15,0,0"> <!-- width= 400, 350 -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.01*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding RomanjiTitle}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" FontSize="14" Margin="0,0,0,0" HorizontalAlignment="Stretch" Foreground="{StaticResource TitleBrush}"/>
                    <TextBlock Text="{Binding Synopsis}" Grid.Column="0" Grid.Row="1" FontSize="10" Margin="0,0,10,0" Width="250" Height="100" Foreground="{StaticResource ContentBrush}" TextWrapping="Wrap" TextTrimming="WordEllipsis" x:Name="searchSynopsisTextBlock"/>
                    
                </Grid>
            </StackPanel>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>

