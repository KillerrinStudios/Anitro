<Page x:ConnectionId='1'
	x:Class="Anitro.UserDashboardPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Anitro"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
	                                 >

	<Page.BottomAppBar>
		<CommandBar>
			<CommandBar.PrimaryCommands>
				<AppBarButton x:ConnectionId='2' x:Uid="Search" Icon="Find" Label="search"                        />
				<AppBarButton x:ConnectionId='3' Visibility="Visible" x:Uid="Settings" Icon="Setting" Label="settings"                          />
				<AppBarButton x:ConnectionId='4' Visibility="Visible" x:Uid="About" Icon="Help" Label="about"                     />
			</CommandBar.PrimaryCommands>
			<CommandBar.SecondaryCommands>
				<AppBarButton x:ConnectionId='5' x:Name="refreshUserInfo" x:Uid="RefreshUserInfo" Icon="Refresh" Label="refresh"                                  />
				<AppBarButton x:ConnectionId='6' x:Uid="ReviewButton" Icon="Comment" Label="review"                        />
			</CommandBar.SecondaryCommands>
		</CommandBar>
	</Page.BottomAppBar>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*" />
		</Grid.RowDefinitions>

		<Grid Grid.Column="0" Grid.Row="0" Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
			<Hub x:ConnectionId='7' x:Name="DashboardHub" DefaultSectionIndex="0" Visibility="Visible" 
				Margin="-40,-60,0,0"  HorizontalAlignment="Left" VerticalAlignment="Stretch"
				                                                           >
				
				<Hub.HeaderTemplate>
					<DataTemplate>
						<Grid HorizontalAlignment="Stretch" Height="190" Margin="0,0,0,2">
							<Image x:ConnectionId='8' x:Name="cover_Image" Opacity="1" VerticalAlignment="Top" Width="1400" Height="190"                             >
								<Image.Source>
									<BitmapImage CreateOptions="None"/>
								</Image.Source>
							</Image>
							<Rectangle Fill="#7F000000" Width="1400" Height="190" />

							<StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Bottom">
								<Image x:ConnectionId='10' x:Name="avatar_Image" Opacity="1" VerticalAlignment="Top" Width="190" Height="190"                             >
									<Image.Source>
										<BitmapImage CreateOptions="None"/>
									</Image.Source>
								</Image>

								<StackPanel Orientation="Vertical" Margin="20,0,0,0" VerticalAlignment="Center">
									<StackPanel Orientation="Horizontal" Margin="0,0,0,0">
										<TextBlock x:ConnectionId='13' x:Name="userName_TextBlock" Text="username" Margin="0,0,0,0" VerticalAlignment="Center"
									   FontSize="42" Foreground="{StaticResource TitleBrush}"                                   />
									</StackPanel>
									<TextBlock x:ConnectionId='12' x:Name="userID_TextBlock" Text="userID" Margin="0,0,0,0"
								   FontSize="26" TextTrimming="CharacterEllipsis"
								   Foreground="{StaticResource ContentBrush}"                                 />
								</StackPanel>

								<StackPanel Orientation="Horizontal" Margin="50,0,0,0">
									<ProgressRing x:ConnectionId='11' x:Name="ApplicationProgressBar" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" Height="100" Width="100" IsActive="False"                                       />
								</StackPanel>
							</StackPanel>

							<Grid Margin="0,20,0,0" HorizontalAlignment="Right" VerticalAlignment="Top">
								<StackPanel Orientation="Horizontal">
									<SearchBox x:ConnectionId='9' x:Name="searchBox" Width="350" VerticalAlignment="Center" Margin="0,0,0,0"                          
												                                                                                                   FocusOnKeyboardInput="False"
												   PlaceholderText="search" QueryText="" />
								</StackPanel>
							</Grid>
						</Grid>
					</DataTemplate>
				</Hub.HeaderTemplate>

				<!--Height="640" Width="390">-->

				<HubSection x:Name="LoggedInHub_Social" Tag="2" Header="Social" Width="600" Margin="40,0,0,0">
					<DataTemplate>
						<Grid>
							<TextBox x:ConnectionId='33' x:Name="textBox_Status" PlaceholderText="write something..." InputScope="Default" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,10,0"                                                              />
							<!--                                   Margin="0,50,0,110-->
							<ListBox x:ConnectionId='34' x:Name="listBox_ActivityFeed" Margin="0,50,0,0"
									 Background="Transparent" FontSize="26" 
									                                                          
									 ItemTemplate="{StaticResource ActivityFeed_CommentTemplate}"
									 ItemContainerStyle="{StaticResource ActivityFeed_ItemContainerStyle}" 
									 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
						</Grid>
					</DataTemplate>
				</HubSection>

				<HubSection x:Name="LoggedInHub_General" MinWidth="320" Tag="0" Header="General">
					<DataTemplate>
						<Grid VerticalAlignment="Stretch">
                            <StackPanel Orientation="Vertical">
                                <Button x:ConnectionId='31' BorderThickness="0"                             >
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="38" Height="38" HorizontalAlignment="Left" Margin="0,0,12,0" Fill="Green" />
                                        <TextBlock Text="Anime Library" HorizontalAlignment="Right" FontSize="28" />
                                    </StackPanel>
                                </Button>

                                <Grid Margin="0,100,0,0">
                                    <!-- http://msdn.microsoft.com/en-US/library/advertising-mobile-windows-phone-ads-walkthroughs-81-xaml-markup%28v=msads.20%29.aspx -->
                                    <!-- Test Settings -->
                                    <!--ApplicationId="test_client"-->
                                    <!--AdUnitId="Image320_50"-->
                                    <!-- Real Settings -->
                                    <!--ApplicationId="e4487080-07e5-4855-899a-a5ba5df17371"-->
                                    <!--AdUnitId="186550"-->
                                    <UI:AdControl x:ConnectionId='32' 
							                                  
							                                               
							         ApplicationId="e4487080-07e5-4855-899a-a5ba5df17371"
							         AdUnitId="186550"
							         HorizontalAlignment="Left"
							         Height="220"
							         IsAutoRefreshEnabled="True"
							         Margin="0,0,0,0" 
							         VerticalAlignment="Bottom" 
							         Width="320" />
                                </Grid>
                                
                            </StackPanel>
                        </Grid>
					</DataTemplate>
				</HubSection>
				
				<HubSection x:Name="Stats" Tag="1" Header="Stats">
					<DataTemplate>
						<Grid>
							<ScrollViewer VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto">
								<Grid>
									<StackPanel Orientation="Vertical">
										<StackPanel Orientation="Vertical">
											<TextBlock x:ConnectionId='25' x:Name="waifuHusbando_TextBlock" Text="waifu/husbando" Margin="0,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                        />
											<StackPanel Orientation="Horizontal" Margin="0,0,0,0">
												<Image x:ConnectionId='29' x:Name="waifu_Image" Opacity="1" VerticalAlignment="Center" Width="50" Height="50"                            >
													<Image.Source>
														<BitmapImage CreateOptions="None"/>
													</Image.Source>
												</Image>
												<TextBlock x:ConnectionId='30' x:Name="waifuName_TextBlock" Text="character name" Margin="20,0,0,0" Width="240"
												   FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextWrapping="Wrap"
												   Foreground="{StaticResource ContentBrush}"                                    />
											</StackPanel>

											<Button x:ConnectionId='26' BorderThickness="0" Margin="0,0,0,0" HorizontalAlignment="Left"                                                           >
												<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
													<Image x:ConnectionId='27' x:Name="waifuShow_Image" Opacity="1" VerticalAlignment="Center" Width="50" Height="50"                                >
														<Image.Source>
															<BitmapImage CreateOptions="None"/>
														</Image.Source>
													</Image>
													<TextBlock x:ConnectionId='28' x:Name="waifuShowName_TextBlock" Text="show name" Margin="20,0,0,0" Width="240"
												   FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextWrapping="Wrap"
												   Foreground="{StaticResource ContentBrush}"                                        />
												</StackPanel>
											</Button>
										</StackPanel>

										<StackPanel Orientation="Vertical" Margin="0,20,0,0">
											<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
												<TextBlock x:Name="animeWatched_TextBlock" Text="Total Anime Watched: " Margin="0,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"/>
												<TextBlock x:ConnectionId='24' x:Name="total_AnimeWatched_TextBlock" Text="0" Margin="0,0,0,0" HorizontalAlignment="Center" FontSize="24" Foreground="{StaticResource ContentBrush}"                                             />
											</StackPanel>

											<TextBlock x:Name="topGenres_TextBlock" Text="Top Genres" Margin="0,20,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"/>

											<StackPanel Orientation="Horizontal" Margin="0,0,0,0">
												<StackPanel Orientation="Vertical">
													<TextBlock x:ConnectionId='19' x:Name="genre1_TextBlock" Text="Genre 1: " Margin="0,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                 />
													<TextBlock x:ConnectionId='20' x:Name="genre2_TextBlock" Text="Genre 2: " Margin="0,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                 />
													<TextBlock x:ConnectionId='21' x:Name="genre3_TextBlock" Text="Genre 3: " Margin="0,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                 />
													<TextBlock x:ConnectionId='22' x:Name="genre4_TextBlock" Text="Genre 4: " Margin="0,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                 />
													<TextBlock x:ConnectionId='23' x:Name="genre5_TextBlock" Text="Genre 5: " Margin="0,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                 />
												</StackPanel>

												<StackPanel Orientation="Vertical" Margin="50,0,0,0">
													<TextBlock x:ConnectionId='14' x:Name="num_Genre1_TextBlock" Text="0" Margin="20,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                     />
													<TextBlock x:ConnectionId='15' x:Name="num_Genre2_TextBlock" Text="0" Margin="20,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                     />
													<TextBlock x:ConnectionId='16' x:Name="num_Genre3_TextBlock" Text="0" Margin="20,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                     />
													<TextBlock x:ConnectionId='17' x:Name="num_Genre4_TextBlock" Text="0" Margin="20,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                     />
													<TextBlock x:ConnectionId='18' x:Name="num_Genre5_TextBlock" Text="0" Margin="20,0,0,0" FontSize="24" Foreground="{StaticResource ContentBrush}"                                     />
												</StackPanel>

											</StackPanel>
										</StackPanel>
									</StackPanel>
								</Grid>
							</ScrollViewer>
						</Grid>
					</DataTemplate>
				</HubSection>
			</Hub>
		</Grid>
	</Grid>
</Page>

